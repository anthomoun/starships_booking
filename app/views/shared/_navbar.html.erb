<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", alt:"Starship logo" %>
    <% end %>
    <% if @search %>
        <%= form_with url: starships_path, method: :get, class:"search-form-control form-group" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control string required",
            placeholder: "Choose a city"
          %>
          <%= submit_tag "search", class: "btn btn-flat"%>
        <% end %>
      <% end %>
    <div class="account-links">
      <%#= link_to "Home", root_path, class:"navbar-item, btn btn-warning"%>
      <% if user_signed_in? %>
       <%= link_to "My dashboard", dashboard_index_path %>
        <a href="<%= edit_user_registration_path %>">Account</a>
        <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        <%= link_to 'Add a ship!', new_starship_path %>
        <%# <i class="fa-solid fa-bars"></i> %>
        <%= image_tag "http://4.bp.blogspot.com/-Wp7clV3HVdU/UQudGKyikvI/AAAAAAAAAgg/S7nkWuHHKOY/s1600/space_invaders.jpg", class: "avatar", alt: "avatar" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class:"navbar-item, btn btn-warning" %>
        <%= link_to "Sign up", new_user_registration_path, class:"navbar-item, btn btn-warning"%>
      <% end %>
    </div>
  </div>
</div>
