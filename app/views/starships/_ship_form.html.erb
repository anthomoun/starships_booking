<%= simple_form_for(@starship) do |f| %>
  <%= f.input :name %>
  <%= f.input :starship_type %>
  <%= f.input :number_of_persons %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <% if action_name == 'edit' %>
    <p>Add all your photos at once here! Photos which are not reselected will be deleted.</p>
  <% end %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
