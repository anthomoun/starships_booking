<h1>Dear Invader, choose your starship for your space journey ðŸš€ !</h1>
<div class="container d-flex" id="starships">
  <div class="row">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <% @starships.each do |starship| %>
      <div class="card-product col-3 mb-3 mt-3">
        <%= link_to starship_path(starship) do %>
          <% if starship.photos.nil? %>
            <div class="image"></div>
          <% else  %>
            <% starship.photos.each do |photo| %>
              <div class="dynamique-image" style="background: url('<%=cl_image_path photo.key %>'); background-size: cover; background-position: center;"></div>
          <% end %>
        <% end %>
        <div class="card-body ">
          <h4><%= starship.name %></h4>
          <p class="card-text"><%= starship.description%></p>
        </div>
      <% end %>
      </div>
      <% end %>
  </div>
</div>
<div class="container">
  <div class="map-button fixed-bottom d-flex justify-content-center">
    <button type="button" class="btn btn-dark">View Map</button>
  </div>
</div>
