 <%# constante provisoire pour les photos des starships %>

 <div class="container">
  <h2><%= @starship.name %></h2>
  <p>Owner: <%= @starship.user.first_name %></p>
  <% if @starship.photos.nil? %>
    <div class='image'></div>
  <% else %>
    <% @starship.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <% end %>
  <h3><%= @starship.model %></h3>
  <p><%= @starship.description %></p>
  <p>Currently located in <%= @starship.address %>.</p>
  <p>Can accomodate <%= @starship.number_of_persons %> passengers.</p>
  <h3>Billing info</h3>
  <p><%= @starship.price %> credits / week</p>
  <%= link_to 'Book flight', new_starship_booking_path(@starship) %>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="x_men_ship_blackbird_nlypw6" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="x-wing_wju914" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="vaisseau_virgin_hjyr14" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


</div>
