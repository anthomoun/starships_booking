
 <div class="container">
  <h2><%= @starship.name %></h2>
  <p>Owner: <%= @starship.user.first_name %></p>
  <% if @starship.photos.nil? %>
    <div class='image'></div>
  <% else %>
      <%= cl_image_tag @starship.photos.first.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <h3><%= @starship.starship_type %></h3>
  <p><%= @starship.description %></p>
  <p>Currently located in <%= @starship.address %>.</p>
  <p>Can accomodate <%= @starship.number_of_persons %> passengers.</p>
  <h3>Billing info</h3>
  <p><%= @starship.price %> credits / week</p>
  <%= render 'bookings/form', starship: @starship, booking: @booking %>
  <%= link_to 'Book flight', new_starship_booking_path(@starship) %>
  <%= link_to 'Remove ship', starship_path(@starship), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
</div>
